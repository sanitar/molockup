<h1>Listing blocks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Title</th>
    <th>Action</th>
    <th>Extra</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blocks.each do |block| %>
  <tr>
    <td><%= block.name %></td>
    <td><%= block.description %></td>
    <td><%= block.title %></td>
    <td><%= block.action %></td>
    <td><%= block.extra %></td>
    <td><%= link_to 'Show', block %></td>
    <td><%= link_to 'Edit', edit_block_path(block) %></td>
    <td><%= link_to 'Destroy', block, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />


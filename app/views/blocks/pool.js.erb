/*
* global molockup.blockpool contains block types
*
* structure: 'type_name':{
*               'title': 'Title in menu',
*               'action': function(contetnt){}
*           }
*
* content - div inside block with all content, requires css class 'content', and can has other classes for custom styles
*
* */

(function(molockup){
    molockup.blockpool = {
	
	<% @pool.each do |block| %>
		'<%=block.name%>':{
			'title':'<%=block.title%>',
			'action':<%=raw block.action%>
		},
	<% end %>
		'reset' : {
            'title': 'Clear box (reset)',
            'action': function(content){
                content.html('')
                        .css({
                                 'width':'100%',
                                 'height':'100%',
                                 'background': 'none'
                             })
                        .attr('class', 'content');
            }
        }
    }
})(molockup);

console.log('Blockpool loaded!');